.page-inner {
}

.page-title-img {
  width: 658rpx;
  height: 214rpx;
  margin: 0 auto 20rpx;
}
.page-title-img image {
  width: 100%;
  height: 100%;
}

.game-rules {
  width: 555rpx;
  margin: 0 auto;
}

.rules-title {
  padding: 0 15rpx;
  background: #a7131f;
  float: left;
  border-radius: 10rpx;
}

.rules-title text {
  color: #fff;
}

.rules-item {
  clear: both;
  margin-bottom: 20rpx;
  padding: 5rpx 15rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  line-height: 16px;
}

.rules-item image {
    position: absolute;
    left: -20rpx;
    top: 0rpx;
    width:30rpx;
    height: 45rpx;
}
.rules-item text {
  color: #a7131f;
  font-size: 14px;
}

/*trigger wrapper begin  */
.trigger-wrapper {
  position: relative;
}
.trigger-btn-container {
  margin-top: 250rpx;
}
.trigger-btn-inner {
  width: 100%;
  height: 142rpx;
  position: relative;
}
.trigger-btn {
  position: absolute;
  left: 90rpx;
  width: 114rpx;
  height: 142rpx;
  z-index: 100;
}

.trigger-tips {
  width: 165rpx;
  line-height: 20rpx;
  text-align: center;
  position: absolute;
  left: 240rpx;
  bottom: 0;
}
.trigger-tips__img-list {
  overflow: hidden;
  width: 100%;
}
.trigger-tips__img {
  width: 33%;
  height: 77rpx;
}
.trigger-tips__text {
  font-size: 22rpx;
}
.trigger-guolan {
  position: absolute;
  right: -140px;
  bottom: -80px;
  width: 280px;
  height: 240px;
}

/*trigger wrapper end  */

.bottom-tips {
  position: absolute;
  bottom: 0;
  width: 100%;
  line-height: 54rpx;
  padding-left: 10rpx;
  background: #a7131f;
}
.bottom-tips text {
  font-size: 30rpx;
  color: #fff;
}