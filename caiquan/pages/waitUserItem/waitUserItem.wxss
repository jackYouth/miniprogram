/* pages/waitUserItem.js/waitUserItem.wxss */

.wait-user-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.wait-user-item__icon {
  width: 130rpx;
  height: 130rpx;
  margin-right: 35rpx;
  border: 2rpx solid #fff;
  border-radius: 100%;
}
.wait-user-item__icon image {
  width: 100%;
  height: 100%;
}

.wait-user-item__text {
  flex: 1;
  background: #f00;
  border: 2rpx solid #e5e5e5;
  border-radius: 40px;
  height: 96rpx;
  text-align: center;
  font-size: 18px;
  line-height: 96rpx;
  color: #fff;
}
.no-user .wait-user-item__icon {
  border: none;
}
.no-user .wait-user-item__text {
  background: #d4ccba;
}

